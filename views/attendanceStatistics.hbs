{{#each flash}}
    <div class="alert alert-{{this.type}}">{{this.message}}</div>
{{/each}}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Seguimiento por medico</h1>
</div>


